package de.heine.cube.online.component;

import java.io.IOException;
import java.util.ResourceBundle;

import javax.faces.context.ExternalContext;
import javax.faces.context.FacesContext;
import javax.servlet.http.HttpSession;

import org.apache.log4j.Logger;

/**
 * 
 * @author axu
 * 
 */
public abstract class AbstractViewScopeBean<T> extends AbstractBean<T> {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private static final Logger log = Logger
			.getLogger(AbstractViewScopeBean.class.getName());


	protected ResourceBundle msgBundle;

	protected ResourceBundle conf;

	/**
	 * 
	 */
	public AbstractViewScopeBean(Class<?> t) {
		super(t);
		FacesContext context = FacesContext.getCurrentInstance();
		ExternalContext ec = context.getExternalContext();
		HttpSession session = (HttpSession) ec.getSession(false);
		if (session == null || session.getAttribute("username") == null) {
			log.debug("No user is login.");
			try {
				ec.redirect("http://localhost:8080/cube-online-module-0.0.1-SNAPSHOT/Login.xhtml");
			} catch (IOException e) {
				e.printStackTrace();
			}
		} else {
			if (session.getAttribute("username") != null) {
				log.debug(session.getAttribute("username") + " is login:");
			}
			log.debug("ID:"+session.getId()+" CreateTime:"+session.getCreationTime());
		}

		
	}

}
