
body {
	font-size: 100.01%;
	font-family: "Helvetica Neue",Arial,sans-serif;
	margin: 0;
	padding: 0em;
	overflow: hidden;
	min-width: 40em;
}

#head {
	position:absolute;
	left:0px;
	width:100%;
	height:75px;
	background: url('../resources/images/header.png') no-repeat 100% 100%;
	background-size: cover;
}

#container {
	position:absolute;
	top:75px;
	bottom:75px;
	width:100%;
	height:100%;
}

#leftcolumn {
	margin-top: -15px;
	height:auto;
	position:absolute;
}

#centercolumn {
	width:auto;
	height:auto;
	position:absolute;
}

#rightcolumn {
	width:240px;
	position:absolute;
	right:0px;
}

#footer {
	position:absolute;
	bottom:0px;
	left:0px;
	width:100%;
	height:75px;
	background: url('../resources/images/Footer.png') no-repeat 100% 100%;
	background-size: cover;
}

.heine-logo {
	width: 124px;
	height: 60px;
	float: left;
	padding: 5px;
}

.heine-logo-text {
	height: 60px;
	width: 256px; 
	float: left;
	font-family: "Helvetica Neue 45Light",Arial,sans-serif;
	font-size: 18pt;
	padding-top: 20px;
}

.heine_pateint_info {
	height: 60px;
	float: left;
	font-family: "Helvetica Neue 45Light", Arial, sans-serif;
	font-size: 18pt;
	padding-top: 20px;
}

.logoutButton {
	width: 240px;
	height: 61px;
	background-image: url('../resources/images/btnLogoutNormal.png');
	color: rgb(0, 0, 0);
	font-family: "Helvetica Neue 65Medium", Arial, sans-serif;
	font-size: 14pt;
	padding-left: 45px;
	float: right;
}

.logoutButton:HOVER {
	background-image: url('../resources/images/btnLogoutHover.png');
}