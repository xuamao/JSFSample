package de.heine.cube.onlineTest;

import java.util.GregorianCalendar;
import java.util.Locale;

/**
 * 
 * 
 * @author axu
 *
 */
public class Patient {
	private long id;
	private String name;
	private String firstName;
	private String gender;
	private GregorianCalendar dateOfBirth;
	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}
	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		this.name = name;
	}
	/**
	 * @return the firstName
	 */
	public String getFirstName() {
		return firstName;
	}
	/**
	 * @param firstName the firstName to set
	 */
	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}
	/**
	 * @return the gender
	 */
	public String getGender() {
		return gender;
	}
	/**
	 * @param gender the gender to set
	 */
	public void setGender(String gender) {
		this.gender = gender;
	}
	/**
	 * @return the dateOfBirth
	 */
	public GregorianCalendar getDateOfBirth() {
		return dateOfBirth;
	}
	/**
	 * @param dateOfBirth the dateOfBirth to set
	 */
	public void setDateOfBirth(GregorianCalendar dateOfBirth) {
		this.dateOfBirth = dateOfBirth;
	}
	public long getId() {
		return id;
	}
	public void setId(long id) {
		this.id = id;
	}
	
	public String getBirthDateString(){
		String date = dateOfBirth.getDisplayName(GregorianCalendar.YEAR, GregorianCalendar.LONG, Locale.GERMAN) + "_" + 
				dateOfBirth.getDisplayName(GregorianCalendar.MONTH, GregorianCalendar.SHORT, Locale.GERMAN) + "_" +
				dateOfBirth.getDisplayName(GregorianCalendar.DAY_OF_MONTH, GregorianCalendar.LONG, Locale.GERMAN);
		return date;
	}
}
